@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}
@section Styles{
    <style>
        #msgContainer {
            width: 60%;
            margin: auto;
            text-align: center;
            margin-top: 50px;
        }
        #msgContainer h2, a{
            padding: 20px;
        }
    </style>
}
<div id="msgContainer">
    @if (User.FindFirst("Role").Value == "manager")
    {
        <h2>Employee successfully added</h2>
        <a asp-controller="Product" asp-action="HomePage">Back to home page</a>
    }
    else
    {
        <h2>You have been successfully registered !</h2>
        <a asp-controller="Auth" asp-action="SignIn">Proceed to sign in</a>
    }
</div>

