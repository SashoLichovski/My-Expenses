@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model My_Expenses.ViewModels.ProductModels.HomePageCalculatedDataModel
@{
    Layout = "_Layout";
}
@section Styles{
    <link rel="stylesheet" href="~/css/DefaultTable/Table.css" />
    <link rel="stylesheet" href="~/css/Home/Sidebar.css" />
}

<partial name="/Views/Product/PartialViews/Sidebar.cshtml" for="EmployeeUsernames"/>

<div class="contentContainer">
    @if (Model.Products.Count == 0)
    {
        <p>No products found for this employee</p>
        <a asp-action="HomePage">Back to all products</a>
    }
    else
    {
        <partial name="/Views/Product/PartialViews/CalculatedInfoTable.cshtml" for="Data" />

        <partial name="/Views/Product/PartialViews/DisplayProducts.cshtml" for="Products" />
    }

</div>

@section Scripts{
    <script src="~/js/Sidebar.js"></script>
    <script src="~/js/Table.js"></script>
    <script src="https://kit.fontawesome.com/15dcd5d68f.js" crossorigin="anonymous"></script>
}