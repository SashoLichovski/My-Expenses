@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model My_Expenses.ViewModels.ProductModels.HomePageCalculatedDataModel
@{
    Layout = "_Layout";
}
@section Styles{
    <link rel="stylesheet" href="~/css/Home/HomePage.css" />
    <link rel="stylesheet" href="~/css/Home/Sidebar.css" />
}
<div class="positionRight">
    <div id="sidebarContainer">
        <h3 class="sidebarHeader">Filter products</h3>
        <div class="sidebarContentContainer">

            <div class="formContainer">
                <div class="dropDownMenu" onclick="ToggleForm(`formByName`)">
                    <h5>Custom filter <i class='fas fa-caret-down' style='font-size:24px'></i></h5>
                </div>
                <form class="filterForm" id="formByName">
                    <select id="category" name="Category" class="form-control">
                        <option value="Food and Drinks">Food and drinks</option>
                        <option value="Bills">Bills</option>
                        <option value="Clothing">Clothing</option>
                        <option value="Other">Other</option>
                    </select>
                    <input type="date" class="form-control" id="dateFrom" name="dateFrom" />
                    <input type="date" class="form-control" id="dateTo" name="dateTo" />
                    <input type="number" placeholder="Minimum prize" class="form-control" id="prizeFrom" name="prizeFrom" />
                    <input type="number" placeholder="Maximum prize" class="form-control" id="prizeTo" name="prizeTo" />
                    <input type="submit" class="btn btn-outline-success form-control" value="Filter" />
                </form>
            </div>

        </div>
    </div>
</div>

<div class="contentContainer">

    <div class="totalAmountContainer">
        <table class="homePageTable">
            <thead>
                <tr>
                    <th>Total</th>
                    <th>From</th>
                    <th>To</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Data.TotalAmount den.</td>
                    <td>@Model.Data.DateFrom</td>
                    <td>@Model.Data.DateTo</td>
                </tr>
            </tbody>
        </table>
    </div>

    <a asp-action="AddProduct" class="btn btn-dark addBtn">Add product</a>

    <div class="scrollContainer">
        <table class="homePageTable">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Prize</th>
                    <th>Date added</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in @Model.Products)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Prize den.</td>
                        <td>@product.DateCreated</td>
                        <td>@product.Category</td>
                        <td>
                            <a asp-action="EditProduct" asp-route-id="@product.Id">Edit</a> |
                            <a asp-action="RemoveProduct" asp-route-id="@product.Id" onclick="return confirm(`Confirm delete action`)">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{ 
    <script src='https://kit.fontawesome.com/a076d05399.js'></script>
    <script src="~/js/Sidebar.js"></script>
}